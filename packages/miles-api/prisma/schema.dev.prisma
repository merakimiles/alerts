generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Event {
  id             String   @id @default(cuid())
  dedupeKey      String   @unique
  occurredAt     DateTime
  receivedAt     DateTime @default(now())
  alertType      String
  severity       String?
  organizationId String?
  networkId      String?
  deviceSerial   String?
  deviceMac      String?
  deviceName     String?
  clientMac      String?
  imageUrl       String?
  details        String?
  // SQLite does not support Json type; store as String in dev
  raw            String

  @@index([occurredAt])
  @@index([alertType])
}

